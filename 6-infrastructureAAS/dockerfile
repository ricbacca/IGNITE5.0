EXPOSE 4000
EXPOSE 6633
EXPOSE 6653
EXPOSE 8080
EXPOSE 9090
EXPOSE 1000
EXPOSE 2000

# Crea una directory per l'app
WORKDIR /container

COPY InfrastructureAAS.jar /container/InfrastructureAAS.jar

ENTRYPOINT ["java", "-jar", "InfrastructureAAS.jar"]
